---
import fondoUrl from "../images/LOGO TRANSF_DIGIT 1.png?url";
const BASE = import.meta.env.BASE_URL;

const LINKS = {
  editar:
    "https://docs.google.com/document/d/1r9-UFsBS0_x0U4y5nKbhK1cLYKmM9JZ6qT-GHXdp9LU/edit?hl=es&tab=t.0",
  formulario: `${BASE}trabajar`,
  ppt: "https://docs.google.com/presentation/d/1ezVMyXktL8tYZKxcP24xMMOWtmbw3dRwRt3ZYrelsN8/edit?hl=es&slide=id.p#slide=id.p",
  otros: "https://www.facebook.com/PrefecturaChimborazo",
};
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Menú</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet"/>
    <style>
      :root{ --nav-h:64px; --radius:18px; --ring:1px solid rgba(255,255,255,.55); --shadow:0 10px 28px rgba(0,0,0,.18); }
      html,body{ margin:0; font-family:system-ui,-apple-system,"Segoe UI",Roboto,Arial,sans-serif; background:#000; }

      /* Barra fija arriba a la izquierda con Volver + Inicio */
      .top-actions{
        position: fixed; top:14px; left:14px; z-index:40;
        display:flex; gap:.5rem; align-items:center;
      }
      .navbtn{
        display:inline-flex; gap:.5rem; align-items:center;
        border-radius:999px; padding:.55rem 1rem;
        background:transparent; border:1px solid rgba(255,255,255,.55);
        color:#fff; text-decoration:none; text-shadow:0 2px 10px rgba(0,0,0,.5);
        backdrop-filter:blur(3px) saturate(120%);
      }
      .navbtn:hover{ border-color:#fff; }

      .stage{ position:relative; isolation:isolate; min-height:100svh; padding-top:calc(var(--nav-h) + 28px);
        display:grid; place-items:center; overflow:hidden; background:#0b1736; }
      .stage>img.bg{ position:absolute; inset:0; width:100%; height:100%; object-fit:cover; object-position:center; z-index:0; }

      .board{ position:relative; z-index:1; width:min(1100px,92vw); }
      .board h1{ margin:0 0 1.1rem; text-align:center; font-weight:900; letter-spacing:-.02em; color:#fff; text-shadow:0 2px 14px rgba(0,0,0,.55); }

      .apps{ display:grid; grid-template-columns:repeat(2, minmax(0,1fr)); gap:clamp(14px,2.6vw,26px); }
      @media (max-width:640px){ .apps{ grid-template-columns:1fr; } }

      .app-tile{ position:relative; display:flex; flex-direction:column; align-items:center; justify-content:center; min-height:190px;
        padding:22px; text-align:center; text-decoration:none; border-radius:var(--radius); background:transparent; border:var(--ring);
        backdrop-filter:blur(3px) saturate(130%); box-shadow:var(--shadow); transition:transform .28s ease, box-shadow .28s ease, border-color .28s ease; color:#fff; }
      .app-tile:hover{ transform:translateY(-6px); box-shadow:0 18px 44px rgba(0,0,0,.24); border-color:rgba(255,255,255,.75); }

      .app-icon{ font-size:clamp(42px,5vw,58px); line-height:1; margin-bottom:.75rem; filter:drop-shadow(0 2px 10px rgba(0,0,0,.35)); }
      .tile-editar .app-icon{ color:#185ABD; } .tile-form .app-icon{ color:#7b4fdd; } .tile-ppt .app-icon{ color:#D24726; } .tile-otros .app-icon{ color:#E3E6EA; }
      .app-title{ font-weight:800; color:#fff; text-shadow:0 2px 12px rgba(0,0,0,.55); }
      .app-sub{ color:#f5f7fb; opacity:.9; margin-top:.25rem; text-shadow:0 2px 10px rgba(0,0,0,.5); }
      .ext{ font-size:.95rem; margin-left:.35rem; vertical-align:text-bottom; }
    </style>
  </head>

  <body>
    <!-- IZQUIERDA: Volver + Inicio -->
    <div class="top-actions">
      <a class="navbtn" href={`${BASE}signin?next=%2F`}><i class="bi bi-arrow-left"></i> Volver</a>
      <a class="navbtn" href={`${BASE}`}><i class="bi bi-house-door"></i> Inicio</a>
    </div>

    <main class="stage">
      <img class="bg" src={fondoUrl} alt="Fondo del sitio" />
      <div class="board">
        <h1 class="h3">Dashboard</h1>

        <div class="apps" aria-label="Accesos principales">
          <a class="app-tile tile-editar" href={LINKS.editar} target="_blank" rel="noopener noreferrer" title="Abrir hoja para editar documentos">
            <i class="bi bi-file-earmark-richtext app-icon"></i>
            <div class="app-title">Hoja de editar documentos <i class="bi bi-box-arrow-up-right ext"></i></div>
            <div class="app-sub">Documentos colaborativos</div>
          </a>

          <a class="app-tile tile-form" href={LINKS.formulario} title="Seleccionar tipo de documento">
            <i class="bi bi-ui-checks-grid app-icon"></i>
            <div class="app-title">Formulario de Google</div>
            <div class="app-sub">Respuestas y envíos</div>
          </a>

          <a class="app-tile tile-ppt" href={LINKS.ppt} target="_blank" rel="noopener noreferrer" title="Abrir presentaciones">
            <i class="bi bi-filetype-pptx app-icon"></i>
            <div class="app-title">Presentaciones <i class="bi bi-box-arrow-up-right ext"></i></div>
            <div class="app-sub">Diapositivas y contenidos</div>
          </a>

          <a class="app-tile tile-otros" href={LINKS.otros} title="Abrir otros documentos">
            <i class="bi bi-collection app-icon"></i>
            <div class="app-title">Otros</div>
            <div class="app-sub">Carpetas y archivos varios</div>
          </a>
        </div>
      </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
